<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="227dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119">

        <RadioButton
            android:id="@+id/radioButtonPashaCoolStyleSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cool Style Settings" />

        <RadioButton
            android:id="@+id/radioButtonDarcSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Style" />

        <RadioButton
            android:id="@+id/radioButtonOriginSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin Style" />

        <Button
            android:id="@+id/buttonGoToCalcunator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GoToCalcunator" />
    </LinearLayout>

    <TextView
        android:id="@+id/textWordSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAnserSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>